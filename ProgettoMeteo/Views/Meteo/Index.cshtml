            <div class="container">
                <!-- Titolo della pagina -->
                <div class="row">
                    <div class="col-12">
                        <h1>Benvenuto nel Meteo App</h1>
                    </div>
                </div>

                <!-- Mostra l'errore se presente -->
                @if (ViewBag.Error != null)
                {
                    <div class="row">
                        <div class="col-12">
                            <p class="text-danger">@ViewBag.Error</p>
                        </div>
                    </div>
                }

                <!-- Se il modello è stato passato e contiene i dati meteo -->
                @if (Model != null)
                {
                    <div class="row">
                        <div class="col-12">
                            <h2>@Model.Location</h2>
                            <h2><img src="@Url.Content(Model.ConvertiIcona(Model.Icon))" alt="Icona"></h2>
                        </div>
                    </div>

                    <!-- Mostra informazioni meteo -->
                    <div class="row">
                        <!-- Card per la temperatura -->
                        <div class="col-6 col-md-4">
                            <div class="card">
                                <h3 class="card-title">Temperatura</h3>
                                <p><strong>@Model.Temperature °C</strong></p>
                                <p><strong>Descrizione:</strong> @Model.Description</p>
                                <img src="@Url.Content(Model.ConvertiIcona(Model.Icon))" alt="Weather Icon" class="card-img-top" />
                            </div>
                        </div>

                        <!-- Card per umidità e pressione -->
                        <div class="col-6 col-md-4">
                            <div class="card">
                                <h3 class="card-title">Condizioni atmosferiche</h3>
                                <p><strong>Umidità:</strong> @Model.Humidity %</p>
                                <p><strong>Pressione:</strong> @Model.Pressure hPa</p>
                            </div>
                        </div>

                        <!-- Card per vento, alba e tramonto -->
                        <div class="col-6 col-md-4">
                            <div class="card">
                                <h3 class="card-title">Vento e Orari</h3>
                                <p><strong>Vento:</strong> @Model.WindSpeed m/s</p>
                                <p><strong>Alba:</strong> @Model.Sunrise</p>
                                <p><strong>Tramonto:</strong> @Model.Sunset</p>
                            </div>
                        </div>
                    </div>

                    <!-- Card per Highlights -->
                    <div class="row">
                        <!-- Card per la qualità dell'aria -->
                        <div class="col-6 col-md-4">
                            <div class="card">
                                <h3 class="card-title">Qualità dell'Aria</h3>
                                <p><strong>AQI:</strong> @Model.AQI</p>
                                <p><strong>PM2.5:</strong> @Model.PM2_5</p>
                                <p><strong>SO2:</strong> @Model.SO2</p>
                                <p><strong>NO2:</strong> @Model.NO2</p>
                                <p><strong>O3:</strong> @Model.O3</p>
                            </div>
                        </div>

                        <!-- Card per umidità e temperatura percepita -->
                        <div class="col-6 col-md-4">
                            <div class="card">
                                <h3 class="card-title">Altri Highlights</h3>
                                <p><strong>Temperatura percepita:</strong> @Model.FeelsLike °C</p>
                                <p><strong>Umidità:</strong> @Model.Humidity %</p>
                            </div>
                        </div>

                        <!-- Card per pressione e visibilità -->
                        <div class="col-6 col-md-4">
                            <div class="card">
                                <h3 class="card-title">Visibilità e Pressione</h3>
                                <p><strong>Visibilità:</strong> @Model.Visibility km</p>
                                <p><strong>Pressione:</strong> @Model.Pressure hPa</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </article>
