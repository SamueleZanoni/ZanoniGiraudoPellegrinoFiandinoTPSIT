@model ProgettoMeteo.Models.Meteo

@{
    ViewData["Title"] = "Previsioni Meteo";
}

<h2>Previsioni per @Model.Location</h2>

<p><strong>Descrizione:</strong> @Model.Description</p>
<p><strong>Temperatura:</strong> @Model.Temperature °C</p>
<p><strong>Percepita:</strong> @Model.FeelsLike °C</p>
<p><strong>Umidità:</strong> @Model.Humidity%</p>
<p><strong>Pressione:</strong> @Model.Pressure hPa</p>
<p><strong>Vento:</strong> @Model.WindSpeed km/h</p>
<p><strong>Alba:</strong> @Model.Sunrise</p>
<p><strong>Tramonto:</strong> @Model.Sunset</p>

